<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0d8c9"
    tools:context="com.example.frys.waters.controllers.ChoosePurityHistoryActivity">

    <Spinner
        android:id="@+id/chooseLocationSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView18"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="#7e9ab7"
        android:text="Choose location:"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#7e9ab7"
        android:text="PPM type:"
        android:layout_below="@+id/chooseLocationSpinner"
        android:layout_alignStart="@+id/textView18" />

    <Spinner
        android:id="@+id/ppmTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView19"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7e9ab7"
        android:text="Year:"
        android:layout_below="@+id/ppmTypeSpinner"
        android:layout_alignStart="@+id/textView19"
        android:layout_marginTop="14dp" />

    <Spinner
        android:id="@+id/yearSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView21"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/submitButton_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="52dp"
        android:layout_toEndOf="@+id/textView19"
        android:text="@string/submit" />

    <Button
        android:id="@+id/cancelButton_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:text="Cancel"
        android:layout_alignBaseline="@+id/submitButton_choose"
        android:layout_alignBottom="@+id/submitButton_choose"
        android:layout_toEndOf="@+id/submitButton_choose" />

</RelativeLayout>