<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.frys.waters.controllers.RegUserActivity"
    tools:showIn="@layout/activity_reg_user_screen">

    <TextView
        android:text="kGT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:fontFamily="cursive"
        android:textSize="60sp"
        android:textColor="#fff2e2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:text="Clean Water Crowdsourcing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textSize="17sp"
        android:textColor="#fff2e2"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/_hello"
        android:text="Hello, Joon(User)"
        android:contentDescription="@string/bottom_sheet_behavior"
        android:textColor="#fff2e2"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/_signout"
        android:text="Sign out"
        android:contentDescription="@string/bottom_sheet_behavior"
        android:textColor="#fff2e2"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/_edit"
        android:textColor="#fff2e2"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView10" />

    <Button
        android:id="@+id/waterAvailabilityMapButton"
        android:alpha=".9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Water Availability Map"
        android:layout_below="@+id/_submit"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/_view"
        android:alpha=".9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="view available water sources"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <Button
        android:id="@+id/_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha=".9"
        android:layout_weight="1"
        android:text="submit a report on water availability"
        android:layout_below="@+id/_view"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/waterQualityReportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit water quality report"
        android:alpha=".9"
        android:layout_below="@+id/waterAvailabilityMapButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/viewWaterQualityReportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Water Quality Report"
        android:alpha=".9"
        android:layout_below="@+id/waterQualityReportButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
