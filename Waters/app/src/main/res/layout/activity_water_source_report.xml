<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFB8734A"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.frys.waters.controllers.WaterSourceReportActivity">

    <TextView
        android:text="Water Source Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/numberOfReportTextView"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/textView14" />

    <TextView
        android:text="Select Water Condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="15sp"
        android:layout_below="@+id/numberOfReportTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <!--<TextView-->
        <!--android:text="Location"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/locationTextView"-->
        <!--android:textColor="@android:color/holo_orange_light"-->
        <!--android:textSize="15sp"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_toEndOf="@+id/numberOfReportTextView" />-->

    <TextView
        android:text="Report Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="15sp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Date and Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateAndTimeTextView"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="15sp"
        android:layout_above="@+id/localDateTimeActual"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:id="@+id/cancelButton"
        android:layout_alignBaseline="@+id/viewButton"
        android:layout_alignBottom="@+id/viewButton"
        android:layout_toEndOf="@+id/textView12" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/typeOfWaterSpinner"
        android:layout_above="@+id/gMap_Button"
        android:layout_toEndOf="@+id/numberOfReportTextView"
        android:layout_marginBottom="32dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/viewButton"
        android:layout_marginStart="27dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/numberOfReportTextView" />

    <TextView
        android:text="Type Of Water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="15sp"
        android:layout_above="@+id/typeOfWaterSpinner"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/localDateTimeActual"
        android:layout_above="@+id/typeOfWaterSpinner"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp" />

    <Button
        android:id="@+id/gMap_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT LOCATION"
        android:layout_above="@+id/viewButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp" />

</RelativeLayout>
