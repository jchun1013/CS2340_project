<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0d8c9"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.frys.waters.controllers.WaterSourceReportActivity">

    <TextView
        android:text="@string/water_source_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textColor="#7e9ab7"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/numberOfReportTextView"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/textView14" />

    <TextView
        android:text="@string/select_water_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textColor="#7e9ab7"
        android:textSize="15sp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/locationTextView" />

    <TextView
        android:text="@string/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationTextView"
        android:textColor="#7e9ab7"
        android:textSize="15sp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/spinner2"
        android:layout_toStartOf="@+id/textView11" />

    <TextView
        android:text="@string/report_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textColor="#7e9ab7"
        android:textSize="15sp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/EnterLocationButton"
        android:layout_alignStart="@+id/EnterLocationButton" />

    <TextView
        android:text="@string/date_and_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateAndTimeTextView"
        android:textColor="#7e9ab7"
        android:textSize="15sp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/numberOfReportTextView"
        android:layout_alignStart="@+id/numberOfReportTextView" />

    <Button
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:id="@+id/cancelButton"
        android:layout_alignBaseline="@+id/viewButton"
        android:layout_alignBottom="@+id/viewButton"
        android:layout_toEndOf="@+id/textView12" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/typeOfWaterSpinner"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@+id/textView2" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/spinner2"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/locationTextView" />

    <Button
        android:text="@string/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/viewButton"
        android:layout_marginStart="27dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/numberOfReportTextView" />

    <TextView
        android:text="@string/type_of_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:id="@+id/textView2"
        android:textColor="#7e9ab7"
        android:textSize="15sp"
        android:layout_below="@+id/dateAndTimeTextView"
        android:layout_toEndOf="@+id/numberOfReportTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:id="@+id/localDateTimeActual"
        android:layout_below="@+id/dateAndTimeTextView"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:id="@+id/EnterLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_location"
        android:layout_below="@+id/locationTextView"
        android:layout_alignStart="@+id/locationTextView" />

</RelativeLayout>